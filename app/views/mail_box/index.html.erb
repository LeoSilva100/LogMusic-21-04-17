<%= link_to 'Voltar', welcome_index_path%>
<h2>Mensagens Recebidas</h2>
<table>   
      <% @inbox_Received.each do |inbox|%>
            <% @comparation = inbox.login_id%>
            <% @register.each do |register|%>
            <%if @comparation == register.login_id %>
            <td><h3><%= register.name %></h3></td>
            <%end%>
      <%end%>
            <td><%= inbox.content%></td>
            <td><%= link_to 'Visualizar', look_index_path(id_message: inbox.id )%></td>
            <td><%= link_to 'Apagar', inbox, method: :delete, data: { confirm: 'Are you sure?' } %></td>   
      <%end%> 
</table>
<h2>Mensagens Enviadas</h2>
<table>
      <% @inbox_Send.each do |inbox_send|%>
            <% @comparation = inbox_send.login_id%>
            <% @register.each do |register_send|%>
            <%if @comparation == register_send.login_id%>
            <td><h3><%= register_send.name%></h3></td>
            <%end%>
      <%end%>
            <td><%= inbox_send.content%></td>
            <td><%if inbox_send.visualization.eql?(true)%></td>
                  <td>Visualizada</td>
            <%else%>
                  <td>NÃ£o Visualizada</td>
            <%end%>
      <%end%>
</table>
